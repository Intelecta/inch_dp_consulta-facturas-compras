                </Column>
                <Column
                  width="12em">
                  <Text text="NPF" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Unidad de medida del pedido" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Cantidad Pedida" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Moneda documento" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Importe neto pedido" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Estatus Pedido" />
                </Column>
                <Column
                  width="12em">
