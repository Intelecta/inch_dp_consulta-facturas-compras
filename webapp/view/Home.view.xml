                  <cells>
                    <Text
                      text="{SupplierName}" />
                  </cells>
                </ColumnListItem>
              </items>
            </Table>

          </ScrollContainer>

          	</uxap:blocks>
          </uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>

	</uxap:ObjectPageLayout>

      </Page>
    </pages>
  </App>
</mvc:View>