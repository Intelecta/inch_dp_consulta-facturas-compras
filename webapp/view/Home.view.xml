<mvc:View
  controllerName="inch_dp_consulta-facturas-compras.controller.Home"
  xmlns:uxap="sap.uxap"
  xmlns:layout="sap.ui.layout" 
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl" >
    <pages>
      <Page title="{i18n>title}">

      <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false">
	<uxap:headerTitle>
	<uxap:ObjectPageDynamicHeaderTitle>
			<uxap:expandedHeading>
				<Title text="Luis Farro" wrapping="true"/>
			</uxap:expandedHeading>

			<uxap:snappedHeading>
				<FlexBox fitContainer="true" alignItems="Center">
					<Avatar src="sap-icon://picture" backgroundColor="Random" class="sapUiTinyMarginEnd"/>
					<Title text="Luis Farro" wrapping="true" />
				</FlexBox>
			</uxap:snappedHeading>

			<uxap:expandedContent>
				<Text text="Consultor SCP"/>
			</uxap:expandedContent>

			<uxap:snappedContent>
				<Text text="Consultor SCP"/>
			</uxap:snappedContent>

			<uxap:snappedTitleOnMobile>
				<Title text="Consultor SCP"/>
			</uxap:snappedTitleOnMobile>

		</uxap:ObjectPageDynamicHeaderTitle>
		
	</uxap:headerTitle>

	<uxap:headerContent>
				<FlexBox wrap="Wrap">
					<Avatar src="sap-icon://picture" backgroundColor="Random" displaySize="L" class="sapUiTinyMarginEnd"/>

					<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
						<ObjectStatus title="País" text="PE - Perú"/>
						<ObjectStatus title="Marca" text="SUB - SUBARU"/>
					</layout:VerticalLayout>

          <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">						
						<ObjectStatus title="Centro" text="1000 - Descripción"/>		
            <ObjectStatus title="Organización de ventas" text="1000 - Descripción"/>
            <ObjectStatus title="Canal" text="1000 - Descripción"/>					
					</layout:VerticalLayout>

				</FlexBox>
			</uxap:headerContent>

			<uxap:sections>
			<uxap:ObjectPageSection>
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Reporte" titleUppercase="false">
						<uxap:blocks>

              <ScrollContainer>
        
        <Table id="idProductsTable"
            mode="SingleSelect"
              inset="false"
              items="{
                path: '/ProductCollection',
                sorter: {
                  path: 'Name'
                }
              }">
              <columns>
                <Column
                  width="12em">
                  <Text text="Número pedido cliente" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Clase de pedido" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Fecha del pedido" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Hora pedido" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Motivo de pedido" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Código destinatario" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Descripción destinatario" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Número de entrega de salida" />
                </Column>
                <Column
                  width="12em">
                  <Text text="Número posición entrega" />
                </Column>
                  <Column
                  width="12em">
                  <Text text="Fecha doc. entrega" />
                </Column>
                <Column
