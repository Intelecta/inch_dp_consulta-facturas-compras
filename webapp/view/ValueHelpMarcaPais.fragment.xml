<core:FragmentDefinition xmlns="sap.m" xmlns:table="sap.ui.table" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:f="sap.ui.layout.form" xmlns:t="sap.ui.table" xmlns:smartTable="sap.ui.comp.smarttable">
	<Dialog contentWidth="20%" icon="sap-icon://group" id="dlgVisualizarMarcaPais" title="Marcas disponibles">

        <table:Table
		        id="tbMarcaPais"
				rows="{marcaPais>/}"
				selectionMode="Single"
				visibleRowCount="7"
				ariaLabelledBy="title">
				<table:extension>
					<OverflowToolbar style="Clear">
						<ToolbarSpacer/>
						<Button
							icon="sap-icon://synchronize"
							tooltip="Sincronizar con SAP"
							press="obtenerMarcaPais(true)"/>
					</OverflowToolbar>
				</table:extension>
				<table:columns>
					<table:Column width="8rem">
						<Label text="PaÃ­s" />
						<table:template>
							<Text text="{marcaPais>Landx}" wrapping="false" />
						</table:template>						
					</table:Column>
					<table:Column width="8rem">
						<Label text="Marca" />
						<table:template>
							<Text text="{marcaPais>VtextKondm}" wrapping="false" />
						</table:template>						
					</table:Column>
				</table:columns>
			</table:Table>

		<buttons>
			<Button type="Accept" text="Aceptar" press="onSeleccionarMarcaPais" app:id="dlgVisualizarMarcaPais" icon="sap-icon://accept"/>
			<Button type="Reject" text="Cerrar" press="onCancelar" app:id="dlgVisualizarMarcaPais" icon="sap-icon://decline"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>